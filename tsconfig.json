{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,

    /* Preact Config */
    "jsx": "react-jsx",
    "outDir": "dist",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"],
      "@components/*": ["./workspaces/components-kit/*"],
      "@foundation": ["./workspaces/foundation-kit/index"],
      "@hooks": ["./workspaces/hooks/index"],
      "@tokens": ["./workspaces/tokens/index"]
    }
  },
  "include": ["node_modules/vite/client.d.ts", "**/*"]
}
